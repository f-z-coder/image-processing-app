{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "outDir": "./dist",
    "strict": true,
    "paths": {
      "@consts/*": ["consts/*"],
      "@controllers/*": ["controllers/*"],
      "@datacontrollers/*": ["db/dataControllers/*"],
      "@schema/*": ["db/schema/*"],
      "@middlewares/*": ["middlewares/*"],
      "@routes/*": ["routes/*"],
      "@types/*": ["types/*"],
      "@utilities/*": ["utilities/*"]
    }
  },
  "include": ["src/**/*"]
}
